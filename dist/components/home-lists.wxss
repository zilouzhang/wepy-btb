.lists {
  padding-bottom: 30rpx;
}
.single-block {
  margin: 0 10rpx 4rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
}
.single-block__info {
  margin-right: 24rpx;
  padding: 10rpx 0 10rpx 24rpx;
  height: 138rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.single-block__title {
  line-height: 1.4;
  font-size: 28rpx;
  color: #000;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.single-block__sub {
  font-size: 0;
}
.single-block__sub text {
  font-size: 24rpx;
  color: #ccc;
}
.single-block__sub text + text {
  margin-left: 30rpx;
}
.single-block__pic {
  font-size: 0;
  width: 214rpx;
  overflow: hidden;
}
.single-block__pic image {
  display: block;
  width: 214rpx;
  height: 120rpx;
}


  <view class="canvas-modal">
    <view class="canvas-modal__box" style="height: {{canvasHeight}}px;">
      <canvas style="height: {{canvasHeight}}px; " canvas-id="ds" disable-scroll="{{true}}" bindtouchstart="touchStart" bindtouchmove="touchMove"/>

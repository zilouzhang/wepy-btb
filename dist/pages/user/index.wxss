@import "./../../components/login-action.wxss";
.head-block {
  background-color: #1f2123;
  display: flex;
  align-items: center;
  padding: 40rpx 28rpx 40rpx 36rpx;
}
.head-block__img {
  width: 108rpx;
  background-color: gray;
  height: 108rpx;
  border-radius: 50%;
  flex: 0 0 auto;
}
.head-block__info {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 8rpx 0 8rpx 26rpx;
}
.head-block__info--name {
  width: 100%;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #ffffff;
  margin-bottom: 8rpx;
}
.menu-block {
  margin-top: 10px;
  width: 100%;
  background: #fff;
}
.menu-block__item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-left: 28rpx;
  padding: 0 28rpx 0 0;
  height: 96rpx;
  border-bottom: 1px solid #f4f4f8;
}
.menu-block__item .left {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  text-align: left;
}
.menu-block__item .gray_arrow {
  width: 14rpx;
  height: 24rpx;
}
